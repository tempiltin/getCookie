<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Dark Hacker Posts</title>
</head>
<body class="bg-gray-900 text-gray-100">
  <div class="container mx-auto p-4">
    <h1 class="text-4xl mb-4">Dark Hacker Posts</h1>

    <!-- Post Qo'shish Formasi -->
    <form action="/add" method="POST" class="mb-4">
      <input type="text" name="csrfFrontend" placeholder="_csrf-frontend" required class="block w-full mb-2 p-2 bg-gray-800 border border-gray-700">
      <input type="text" name="frontend" placeholder="frontend" required class="block w-full mb-2 p-2 bg-gray-800 border border-gray-700">
      <input type="text" name="pageUrl" placeholder="page_url" required class="block w-full mb-2 p-2 bg-gray-800 border border-gray-700">
      <button type="submit" class="bg-green-600 px-4 py-2">Submit</button>
    </form>

    <!-- Postlar Jadvali -->
    <table class="table-auto w-full text-left">
      <thead>
        <tr>
          <th class="px-4 py-2">_csrf-frontend</th>
          <th class="px-4 py-2">frontend</th>
          <th class="px-4 py-2">page_url</th>
          <th class="px-4 py-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each posts}}
          <tr>
            <td class="border px-4 py-2">{{this.csrfFrontend}}</td>
            <td class="border px-4 py-2">{{this.frontend}}</td>
            <td class="border px-4 py-2"><a href="{{this.pageUrl}}">{{this.pageUrl}}</a></td>
            <td class="border px-4 py-2">
              <form action="/delete/{{this._id}}" method="POST" class="inline">
                <button type="submit" class="bg-red-600 px-4 py-2">Delete</button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</body>
</html>
